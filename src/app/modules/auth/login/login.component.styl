.container
  display flex
  width 100%
  height 100vh
  justify-content center
  align-items center
  gap 1rem

img
  border-radius 1%

.title
  display flex
  align-items baseline
  justify-content center
  font-size 3rem
  margin-bottom 2rem

form
  display flex
  flex-direction column
  align-items flex-start

.separator
  display flex
  align-items center
  text-align center
  width 80%
  margin 2% auto

  &:before
  &:after
    content ''
    flex 1
    border-bottom 1px solid #37966f

  &:before
    margin-right 0.25em

  &:after
    margin-left 0.25em

.link
  text-decoration none

  &:hover
    text-decoration underline

.login-card
  padding 2rem

  &__header
    display flex
    justify-content center
    margin-bottom 1rem

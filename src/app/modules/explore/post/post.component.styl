.container
  position relative

  .post-image
    width 100%
    max-height 600px

  .text-block
    display none
    transition display 0.2s

  .actions-block
    width 100%
    padding 10px
    display flex
    justify-content flex-end
    gap 10px

.container:hover > .text-block
  display flex
  flex-direction row
  position absolute
  gap 10px
  align-items center
  bottom 5px
  width 100%
  background rgba(51, 51, 51, 0.1)
  box-shadow inset 0 5px 35px 0 rgba(51, 51, 51, 0.2)
  color rgb(51, 51, 51)
  padding 10px
  transition 0.2s

.user-image
  display flex
  width 50px
  height 50px
  border-radius 50%

.example-form
  width 100%

.example-right-align
  text-align right

input.example-right-align
  -moz-appearance textfield

img
  border-radius 5px

.form-area
  display flex
  text-align center
  padding-left 1%
  padding-right 1%

.form-area mat-form-field
  width 80%

.form-area mat-toolbar
  margin-bottom 25px

.form-area div
  margin-top 10px

.link
  text-decoration none

.container
  display flex
  width 100%
  height 100%
  flex-direction row
  justify-content center
  align-items center
  gap 1rem

.separator
  display flex
  align-items center
  text-align center
  width 80%
  margin 2% auto

.separator::before
.separator::after
  content ''
  flex 1
  border-bottom 1px solid #37966f

.separator::before
  margin-right 0.25em

.separator::after
  margin-left 0.25em

.title
  font-size 4rem
  margin-bottom 2rem

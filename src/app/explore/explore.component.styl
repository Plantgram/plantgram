.grid-container
    display grid
    grid-template-columns 5% 90% 5%
    grid-template-rows auto
    gap 0 0
    overflow-y visible

.grid-container aside
    padding 10px
    height 100vh

.left-sidebar
    grid-area 1
    display flex
    flex 0 0 100%
    flex-direction column
    gap 25px
    background-color #37966f

    section
        display flex
        text-align center

        span
            font-size xx-large
            color #fffbe6

.ls-icons-section
    display flex
    flex-direction column
    gap 2rem
    justify-content center

.right-sidebar
    grid-area 1 / 3 / 2 / 4
    display flex
    flex 0 0 100%
    justify-content center
    background-color #37966f

    section
        margin-top 25px
        text-align center

        span
            font-size xx-large
            color #fffbe6

.explore
    grid-area 1 / 2 / 2 / 3
    display flex
    flex-flow row wrap
    justify-content space-around
    overflow auto
    height 100vh

    .item
        flex-basis 24.5%
        align-self flex-start

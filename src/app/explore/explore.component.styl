.toolbar
  position fixed
  top 0
  left 0
  right 0

.sidenav-container
  position absolute
  top 60px
  bottom 0
  left 0
  right 0

  section
    width 100%

.sidenav
  padding 20px
  width 200px
  background-color #293241

.actionbar
  margin-top 1rem
  display flex
  flex-direction column
  align-items center
  overflow-x hidden

  a
    color white

  button
    color white

  mat-icon
    color #d8f3dc
    margin-right 15px

.sidenav-content
  display flex
  height 100%
  align-items center
  justify-content center

.explore
  height calc(100vh - 60px)
  overflow auto
  padding 0.5rem 1rem
